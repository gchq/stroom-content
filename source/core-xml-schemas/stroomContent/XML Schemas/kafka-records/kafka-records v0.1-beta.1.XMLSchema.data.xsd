<xs:schema xmlns:krec="kafka-records:1" xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" targetNamespace="kafka-records:1" id="kafka-records-v0.1-beta.1" version="0.1-beta.1">
  <xs:element name="kafkaRecords">
    <xs:annotation>
      <xs:documentation>An abstraction of a set of Kafka producer records. The XML records capture sufficient data to enable the generation of Kafka producer records that can be placed on a topic.</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="krec:kafkaRecord"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="kafkaRecord" type="krec:RecordComplexType"/>
  <xs:complexType name="RecordComplexType">
    <xs:sequence>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="header">
        <xs:annotation>
          <xs:documentation>Optional headers for the record that can be used to provide metadata alongside the key/value.</xs:documentation>
        </xs:annotation>
        <xs:complexType>
          <xs:sequence>
            <xs:element name="key" type="xs:string">
              <xs:annotation>
                <xs:documentation>The key of the header item.</xs:documentation>
              </xs:annotation>
            </xs:element>
            <xs:element minOccurs="0" name="value">
              <xs:annotation>
                <xs:documentation>The optional value of the header item.</xs:documentation>
              </xs:annotation>
              <xs:complexType>
                <xs:complexContent>
                  <xs:extension base="xs:anyType"/>
                </xs:complexContent>
              </xs:complexType>
            </xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element minOccurs="0" name="key" type="xs:anyType">
        <xs:annotation>
          <xs:documentation>The optional key of the producer record. If no key or partition is supplied Kafka will assign a partition on a round-robin basis.</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element minOccurs="0" name="value" type="xs:anyType">
        <xs:annotation>
          <xs:documentation>The value of the record. The value is optional to allow for tombstoning in compacted topics. A key should be supplied if no value if supplied.</xs:documentation>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
    <xs:attribute name="topic" type="xs:string" use="required">
      <xs:annotation>
        <xs:documentation>Name of the topic to send the record to.</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="partition">
      <xs:annotation>
        <xs:documentation>Optional partition number to send the record to.</xs:documentation>
      </xs:annotation>
      <xs:simpleType>
        <xs:restriction base="xs:int">
          <xs:minInclusive value="0"/>
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
    <xs:attribute name="timestamp">
      <xs:annotation>
        <xs:documentation>The optional timestamp of the record. If one is not supplied then Kafka will assign a timestamp according to the configuration of the topic.</xs:documentation>
      </xs:annotation>
      <xs:simpleType>
        <xs:restriction base="xs:long">
          <xs:minInclusive value="0"/>
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
  </xs:complexType>
</xs:schema>
